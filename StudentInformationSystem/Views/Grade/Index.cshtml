@model IEnumerable<StudentInformationSystem.Models.Grade>

@{
    ViewData["Title"] = "Grades Information";
}

<style>
    body {
        background-color: #f7f7f7; /* Değiştirmek istediğiniz arka plan rengi */
    }

    .card {
        border-radius: 15px;
        border: 1px solid #ccc;
        margin-bottom: 20px;
        background-color: #fff;
    }

    .card-body {
        padding: 15px;
    }

    .btn-link {
        color: inherit;
        text-decoration: none;
    }

        .btn-link:hover {
            color: inherit;
            text-decoration: underline;
        }
</style>

<h1 class="text-center">Grades Information</h1>

<div class="container mt-4">
    <div class="row justify-content-end mb-3">
        <div class="col-md-4">
            <form method="get" action="@Url.Action("Index", "Grade")" class="input-group">
                <input type="text" name="search" placeholder="Search by student number" class="form-control">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        @foreach (var grade in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">@grade.StudentNumber</h5>
                        <p class="card-text">
                            <strong>Code:</strong> @grade.Code <br />
                            <strong>Grade Value:</strong> @grade.GradeValue
                        </p>
                        <div class="text-right">
                            <a asp-action="Edit" asp-route-id="@grade.Id" class="btn btn-link">Edit</a>
                            <a asp-action="Details" asp-route-id="@grade.Id" class="btn btn-link">Details</a>
                            <a asp-action="Delete" asp-route-id="@grade.Id" class="btn btn-link">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a asp-action="Create" class="btn btn-primary">Create New Grade</a>
        </div>
    </div>
</div>

<footer class="text-center mt-4">
    <p>© 2024 - StudentInformationSystem - Privacy</p>
</footer>
