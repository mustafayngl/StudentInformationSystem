@model StudentInformationSystem.Models.Lesson

@{
    ViewData["Title"] = "Delete Lesson";
}

<h1 class="text-center">Delete Lesson</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Warning!</h4>
                    <p class="card-text">Are you sure you want to delete this lesson?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Code:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Code)</dd>
                        <dt class="col-sm-4">Name:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>
                        <dt class="col-sm-4">Semester:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Semester)</dd>
                        <dt class="col-sm-4">Credit:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Credit)</dd>
                    </dl>
                </div>
                <div class="card-footer text-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
