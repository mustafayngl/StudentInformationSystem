@model StudentInformationSystem.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<h1 class="text-center">Delete User</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Warning!</h4>
                    <p class="card-text">Are you sure you want to delete this user?</p>
                    <dl class="row">
                        <dt class="col-sm-4">Username:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Username)</dd>
                        <dt class="col-sm-4">Password:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>
                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
                    </dl>
                </div>
                <div class="card-footer text-right">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" /> |
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
