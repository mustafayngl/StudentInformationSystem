@model StudentInformationSystem.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h1 class="text-center">User Details</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(model => model.Username)</h4>
                    <dl class="row">
                        <dt class="col-sm-4">Password:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Password)</dd>
                        <dt class="col-sm-4">Role:</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Role)</dd>
                    </dl>
                </div>
                <div class="card-footer text-right">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>
