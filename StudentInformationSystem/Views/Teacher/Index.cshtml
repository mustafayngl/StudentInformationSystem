@model IEnumerable<StudentInformationSystem.Models.Teacher>

@{
    ViewData["Title"] = "Teacher Information";
}

<style>
    .card {
        border-radius: 15px;
        border: 1px solid #ccc;
        margin-bottom: 20px;
    }

    .card-body {
        padding: 15px;
    }

    .btn-link {
        color: inherit;
        text-decoration: none;
    }

        .btn-link:hover {
            color: inherit;
            text-decoration: underline;
        }
</style>

<h1 class="text-center">Teacher Informations</h1>

<div class="container mt-4">
    <div class="row justify-content-end mb-3">
        <div class="col-md-4">
            <form method="get" action="/Teacher/Index" class="input-group">
                <input type="text" name="search" placeholder="Search by teacher name" class="form-control">
                <button type="submit" class="btn btn-primary">Search</button>
            </form>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        @foreach (var teacher in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card" style="cursor: pointer;" onclick="toggleDetails('@teacher.Id')">
                    <div class="card-body">
                        <h5 class="card-title">@teacher.Name @teacher.Surname</h5>
                        <p class="card-text">
                            <strong>Identity Number:</strong> @teacher.IdentityNumber <br />
                            <strong>Email:</strong> @teacher.Email <br />
                            <strong>Office:</strong> @teacher.Office
                        </p>
                        <div id="details-@teacher.Id" style="display: none;">
                            <a href="/Teacher/Edit/@teacher.Id" class="btn btn-link">Edit</a>
                            <a href="/Teacher/Delete/@teacher.Id" class="btn btn-link">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a href="/Teacher/Create" class="btn btn-primary">Create New Teacher</a>
        </div>
    </div>
</div>

<footer class="text-center mt-4">
    <p>© 2024 - StudentInformationSystem - Privacy</p>
</footer>

<script>
    function toggleDetails(teacherId) {
        var detailsDiv = document.getElementById('details-' + teacherId);
        if (detailsDiv.style.display === 'none') {
            detailsDiv.style.display = 'block';
        } else {
            detailsDiv.style.display = 'none';
        }
    }
</script>
